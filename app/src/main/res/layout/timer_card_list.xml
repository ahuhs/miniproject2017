<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="10sp"
        android:elevation="20dp"

        >

        <RelativeLayout
            android:id="@+id/lineraid"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/time_header"
            android:orientation="vertical"
            android:background="#00ffffff"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StartTime   : "
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/startTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView6"
                android:text="sample"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="18dp"
                android:text="StopTime    :"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/endTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_toEndOf="@+id/textView5"
                android:text="sample"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/deleteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="#00ffffff"
                android:src="@drawable/ic_delete_black_24dp" />

            <ImageButton
                android:id="@+id/editTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/endTimer"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/deleteTime"
                android:layout_below="@+id/deleteTime"
                android:backgroundTint="#00ffffff"
                android:src="@drawable/ic_edit_black_24dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00e9af">

            <TextView
                android:id="@+id/time_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="68dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Not Active"
                android:textSize="25dp" />

            <Switch
                android:id="@+id/timer_active_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>